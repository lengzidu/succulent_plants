/* miniprogram/pages/index/index.wxss */
.title {
  font-size: 50px;
  font-weight: 600;
  width: 50px;
  color: green;
}
.title_duo {
  transform: rotate(-7deg);
}
.title_rou {
  transform: translate(80rpx) rotate(7deg);
}
.title_shi {
  transform: translate(130rpx, 20px);
}
.title_bie {
  transform: translate(160rpx, 40px) rotate(8deg);
}

.index_top {
  width: 100%;
  max-width: 375px;
  display: flex;
  flex-flow: row;
}
.index_top image {
  width: 62%;
  height: 380px;
  object-fit: contain;
}

.index_button {
  width: 155px;
  height: 45px;
  color: #ffffff;
  background-color:#2fd77c;
  border: none;
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24px;
}
.button_img {
  width: 20px;
  height: 16px;
}
.button_msg {
  font-size: 16px;
  width: 65px;
  display: flex;
  justify-content: center;
  padding-left: 7px;
}
.from_album {
  display: flex;
  justify-content: center;
  color: lightgrey;
  font-size: 12px;
  margin: 20px 0;
}
